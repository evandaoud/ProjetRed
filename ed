package main

import "fmt"

// Définition de la structure pour représenter un étudiant
type Etudiant struct {
    Nom    string
    Age    int
    Classe string
}

func main() {
    // Création d'un tableau de pointeurs vers des étudiants
    etudiants := []*Etudiant{
        {Nom: "Alice", Age: 20, Classe: "Informatique"},
        {Nom: "Bob", Age: 22, Classe: "Mathématiques"},
        {Nom: "Charlie", Age: 21, Classe: "Physique"},
    }

    // Affichage des informations des étudiants
    fmt.Println("Informations des étudiants :")
    for _, etudiant := range etudiants {
        fmt.Printf("Nom : %s, Age : %d, Classe : %s\n", etudiant.Nom, etudiant.Age, etudiant.Classe)
    }
}



ou 


package main

import "fmt"

// Définition de la structure
type Personne struct {
    Nom      string
    Age      int
    Adresse  string
}

func main() {
    // Création d'une instance de la structure avec un pointeur
    personne1 := &Personne{
        Nom:     "Jean Dupont",
        Age:     30,
        Adresse: "123 Rue de la Liberté",
    }

    // Création d'un tableau de pointeurs vers des instances de la structure
    personnes := []*Personne{
        personne1,
        {
            Nom:     "Alice Martin",
            Age:     25,
            Adresse: "456 Avenue des Roses",
        },
    }

    // Accès aux données à l'aide des pointeurs
    fmt.Println("Nom de la première personne:", personnes[0].Nom)
    fmt.Println("Age de la deuxième personne:", personnes[1].Age)
}

